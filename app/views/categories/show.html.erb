<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class=form>

<h2>
  Kind:
  <%= @category.kind %>
</h2>

<h3>Part Name</h3>
<%= @category.entry.each do |entry| %>

<div class="response">
<p>
  <strong>Part Name:</strong>
  <%= entry.name %>
</p>

<p>
  <strong>Amount:</strong>
  <%= entry.quantity %>
</p>
</div>

<% end %>

<div class="row">
  <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
    <div class="break">
      <hr>
    </div>
  </div>
</div>

<h3>Add a Part!</h3>

<div class="field">
<%= form_for([@category,@category.entry.build]) do |f| %>
  <p>
  	<%= f.label :name %><br />
  	<%= f.text_field :name %>
  </p>

  <p>
  	<%= f.label :quantity %><br />
  	<%= f.text_field :quantity %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
</div>

      </div>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_category_path(@category) %> |
